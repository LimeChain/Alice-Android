<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/display_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_24_solid_ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_dimen_70"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_font_size_51"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/text_font_size_40"/>

        <FrameLayout
            android:id="@+id/custom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/view_dimen_105"
            android:layout_marginTop="@dimen/view_dimen_30"
            android:layout_marginRight="@dimen/view_dimen_105"
            android:lineSpacingExtra="@dimen/view_dimen_20"
            android:textColor="@color/black_90_transparent"
            android:textSize="@dimen/text_font_size_42" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/view_dimen_30"
            android:layout_marginBottom="@dimen/view_dimen_50"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="@dimen/view_dimen_300"
                android:layout_height="@dimen/view_dimen_110"
                android:background="@drawable/bg_corner_100_stroke_width_1_ffa448"
                android:gravity="center"
                android:text="@android:string/cancel"
                android:textColor="@color/color_FFA448"
                android:textSize="@dimen/view_dimen_42"
                android:visibility="gone" />

            <TextView
                android:id="@+id/ok"
                android:layout_width="@dimen/view_dimen_300"
                android:layout_height="@dimen/view_dimen_110"
                android:layout_marginLeft="@dimen/view_dimen_40"
                android:background="@drawable/bg_corner_100_solid_ffa448"
                android:gravity="center"
                android:text="@android:string/ok"
                android:textColor="@color/white"
                android:textSize="@dimen/view_dimen_42" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>